<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ticktacktoe"
    android:background="@color/primaryColor">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tic_tac_toe" />

    <GridLayout

        android:id="@+id/gridLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#004DB6AC"
        android:columnCount="3"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".ticktacktoe">


        <Button
            android:id="@+id/button3"
            android:layout_width="@dimen/tikTakButtonWidth"
            android:layout_height="@dimen/tikTakButtonHeight"
            android:layout_row="0"
            android:layout_column="2"
            android:text=""
            android:onClick="playGame"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="@dimen/tikTakButtonWidth"
            android:layout_height="@dimen/tikTakButtonHeight"
            android:layout_row="0"
            android:layout_column="1"
            android:text=""
            android:onClick="playGame"/>

        <Button
            android:id="@+id/button1"
            android:layout_width="@dimen/tikTakButtonWidth"
            android:layout_height="@dimen/tikTakButtonHeight"
            android:layout_row="0"
            android:layout_column="0"
            android:text=""
            android:onClick="playGame"/>

        <Button
            android:id="@+id/button4"
            android:layout_width="@dimen/tikTakButtonWidth"
            android:layout_height="@dimen/tikTakButtonHeight"
            android:layout_row="1"
            android:layout_column="0"
            android:text=""
            android:onClick="playGame"/>

        <Button
            android:id="@+id/button5"
            android:layout_width="@dimen/tikTakButtonWidth"
            android:layout_height="@dimen/tikTakButtonHeight"
            android:layout_row="1"
            android:layout_column="1"
            android:text=""
            android:onClick="playGame"/>

        <Button
            android:id="@+id/button6"
            android:layout_width="@dimen/tikTakButtonWidth"
            android:layout_height="@dimen/tikTakButtonHeight"
            android:layout_row="1"
            android:layout_column="2"
            android:text=""
            android:onClick="playGame"/>

        <Button
            android:id="@+id/button7"
            android:layout_width="@dimen/tikTakButtonWidth"
            android:layout_height="@dimen/tikTakButtonHeight"
            android:layout_row="2"
            android:layout_column="0"
            android:text=""
            android:onClick="playGame"/>

        <Button
            android:id="@+id/button8"
            android:layout_width="@dimen/tikTakButtonWidth"
            android:layout_height="@dimen/tikTakButtonHeight"
            android:layout_row="2"
            android:layout_column="1"
            android:text=""
            android:onClick="playGame"/>

        <Button
            android:id="@+id/button9"
            android:layout_width="@dimen/tikTakButtonWidth"
            android:layout_height="@dimen/tikTakButtonHeight"
            android:layout_row="2"
            android:layout_column="2"
            android:text=""
            android:onClick="playGame"
            />

    </GridLayout>

    <Button
        android:id="@+id/buttonClear"
        android:layout_width="145dp"
        android:layout_height="100dp"
        android:text="CLEAR"
        app:layout_constraintBottom_toBottomOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.940"
        android:backgroundTint="@color/primaryLightColor"
        android:onClick="clearText"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="@dimen/textViewWidth"
        android:layout_height="@dimen/tikTakButtonHeight"
        android:text="Player 1"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.025" />

</androidx.constraintlayout.widget.ConstraintLayout>
